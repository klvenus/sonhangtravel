{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Danh mục Tour",
    "description": "Phân loại tour du lịch"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "ten": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "tours": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tour.tour",
      "mappedBy": "category"
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
