{
  "kind": "collectionType",
  "collectionName": "tours",
  "info": {
    "singularName": "tour",
    "pluralName": "tours",
    "displayName": "Tour Du Lịch",
    "description": "Quản lý các tour du lịch Trung Quốc"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "price": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "originalPrice": {
      "type": "integer",
      "min": 0
    },
    "duration": {
      "type": "string",
      "required": true
    },
    "departure": {
      "type": "string"
    },
    "destination": {
      "type": "string",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "tourFile": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["files"]
    },
    "itinerary": {
      "type": "component",
      "repeatable": true,
      "component": "tour.itinerary-item"
    },
    "includes": {
      "type": "component",
      "repeatable": true,
      "component": "tour.list-item"
    },
    "excludes": {
      "type": "component",
      "repeatable": true,
      "component": "tour.list-item"
    },
    "notes": {
      "type": "component",
      "repeatable": true,
      "component": "tour.list-item"
    },
    "policy": {
      "type": "richtext"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "tours"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "reviewCount": {
      "type": "integer"
    },
    "bookingCount": {
      "type": "integer"
    },
    "departureDates": {
      "type": "component",
      "repeatable": true,
      "component": "tour.departure-date"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
